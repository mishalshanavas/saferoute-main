{
  "name": "saferoute-mern-java",
  "version": "1.0.0",
  "description": "SafeRoute - MERN Stack with Java Microservices for Advanced Routing",
  "main": "index.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run routing\"",
    "dev-no-routing": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start", 
    "routing": "cd routing-service && npm run dev",
    "java": "cd java-services/routing-service && mvn spring-boot:run",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../routing-service && npm install && cd ..",
    "build": "cd frontend && npm run build",
    "build-java": "cd java-services/routing-service && mvn clean package",
    "test": "cd backend && npm test",
    "test-java": "cd java-services/routing-service && mvn test",
    "start": "node backend/server.js"
  },
  "keywords": ["routing", "safety", "mern", "java", "microservices", "geospatial"],
  "author": "SafeRoute Team",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^8.2.0"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}